<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:background="@drawable/marcoblosoms"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/Horizontal_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/mp7img" />

                <TextView
                    android:id="@+id/Title"
                    android:layout_width="119dp"
                    android:layout_height="82dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="ProbabilityTest"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:visibility="visible"
                    tools:text="ProbabilityTest" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Search_Button_Horizontal"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <SearchView
                android:id="@+id/Search_Bar"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:soundEffectsEnabled="false">

            </SearchView>

            <Button
                android:id="@+id/Search_Button"
                android:layout_width="31dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#FF69B4"
                android:text="Search" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="236dp"
            android:layout_weight="1"
            android:background="#FFB6C1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="237dp"
                android:layout_weight="0"
                android:background="#FFB6C1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="   " />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="   " />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        android:background="#FFB6C1"
                        android:text="How to use ProbabilityTest :"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="      " />

                    <TextView
                        android:id="@+id/Blank_Line"
                        android:layout_width="332dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#FFB6C1"
                        android:text="     ProbabilityTest`s intentions are to inform users the frequency of a phrase appearing on previous proficiency tests from 1990 to present. This apps intentions are to help users study relevant content for the proficiency test. By searching a phrase in the search bar, the results will provide users with the definition, an example of use, and also the frequency of the phrase. "
                        android:textAppearance="@style/TextAppearance.Compat.Notification.Title" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="      " />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Pissibility_Horizontal"
            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:layout_weight="1"
            android:background="#FFB6C1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Possibility"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_weight="0"
                android:background="#FFB6C1"
                android:gravity="center_vertical|center_horizontal"
                android:text="      FREQUENCY :   "
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>