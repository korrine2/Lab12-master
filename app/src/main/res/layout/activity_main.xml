<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="353dp"
        android:layout_weight="1"
        android:background="@drawable/marcoblosoms"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/Horizontal_Title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="323dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=" " />

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="176dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/mp7img" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=" " />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Title"
                    android:layout_width="119dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="ProbabilityTest"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=" " />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Search_Button_Horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <SearchView
                android:id="@+id/Search_Bar"
                android:layout_width="227dp"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light" />

            <Button
                android:id="@+id/Search_Button"
                android:layout_width="31dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#FF69B4"
                android:text="Search"
                tools:text="Search" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFB6C1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/Search_Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Phrase_Searched"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Phrase"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    tools:text="                                                 Phrase" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bullet_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="top"
                        android:text="    " />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="106dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="Meaning :"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    <TextView
                        android:id="@+id/bullet_point2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="top"
                        android:text="    " />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bullet_point"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="right"
                        android:text="*  " />

                    <TextView
                        android:id="@+id/Definition_Phrase"
                        android:layout_width="307dp"
                        android:layout_height="33dp"
                        android:layout_weight="0"
                        android:text="Definition of the phrase is provided here"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bullet_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="top"
                        android:text="    " />

                    <TextView
                        android:id="@+id/Intro_to_Example"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="例文/Examples of usage:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    <TextView
                        android:id="@+id/bullet_point2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="top"
                        android:text="    " />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bullet_point"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="right"
                        android:text="*  " />

                    <TextView
                        android:id="@+id/Example_Sentence"
                        android:layout_width="307dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="This would be an example of how the phrase would be used in a Japanese sentence. "
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    <TextView
                        android:id="@+id/bullet_point2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="top"
                        android:text="    " />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bullet_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="top"
                        android:text="    " />

                    <TextView
                        android:id="@+id/Intro_to_Example"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="Examples of English usage:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    <TextView
                        android:id="@+id/bullet_point2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="top"
                        android:text="    " />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bullet_point"
                        android:layout_width="36dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="right"
                        android:text="*  " />

                    <TextView
                        android:id="@+id/English_translation"
                        android:layout_width="306dp"
                        android:layout_height="29dp"
                        android:layout_weight="0"
                        android:text="English translation"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    <TextView
                        android:id="@+id/bullet_point2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="top"
                        android:text="    " />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Pissibility_Horizontal"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Possibility"
                android:layout_width="398dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:gravity="top|center_horizontal"
                android:text="          FREQUENCY :"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                tools:text="          FREQUENCY :" />

            <TextView
                android:id="@+id/Possibility_Percentage"
                android:layout_width="293dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:gravity="top|center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>