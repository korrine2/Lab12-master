<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/Horizontal_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <TextView
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="TextView"
            tools:text="ProbabilityTest" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Search_Button_Horizontal"
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <SearchView
            android:id="@+id/Search_Bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/Search_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Search_Button"
            tools:text="Search" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/Search_Body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Phrase_Searched"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:text="                                                 Phrase" />

            <TextView
                android:id="@+id/Definition_Phrase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:text="Meaning : BLAH definition of the word provided here" />

            <TextView
                android:id="@+id/Intro_to_Example"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:text="Examples of use :" />

            <TextView
                android:id="@+id/Example_Sentence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:text="* This would be an example of how the phrase would be used in a sentence. we can even add a picture to help the reader visualise the phrase if that is possible. " />

            <TextView
                android:id="@+id/Blank_Line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:text="  " />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Pissibility_Horizontal"
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Possibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            tools:text="          FREQUENCY :" />

        <TextView
            android:id="@+id/Possibility_Percentage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            tools:text="100%" />

    </LinearLayout>

</LinearLayout>